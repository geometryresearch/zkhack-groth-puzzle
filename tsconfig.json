{
	"compilerOptions": {
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"target": "es5",
		"module": "CommonJS",
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"jsx": "react-jsx",
		"lib": ["dom", "es5", "es6", "es7", "es2017", "dom.iterable", "esnext"]
	},
	"include": [
		"./scripts",
		"./test",
		"./typechain",
		"compile-circuit.ts",
		"src/**/*"
	],
	"files": ["./hardhat.config.ts", "./compile-circuit.ts"]
}
